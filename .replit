modules = ["nodejs-20", "postgresql-16"]

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Health App Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "DB Sync"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "DB Seed"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "DB Status"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Create DB Snapshot"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "List DB Snapshots"

[[workflows.workflow]]
name = "Health App Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "PORT=8000 npm install && SKIP_GLOBAL_JOBS=true PORT=8000 node server.js"
waitForPort = 8000

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow]]
name = "DB Sync"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node scripts/drizzle-sync.js"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "DB Seed"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node scripts/db-commands.js seed"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "DB Status"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node scripts/db-commands.js status"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "Create DB Snapshot"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node scripts/backup-database.js create"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "List DB Snapshots"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node scripts/backup-database.js list"

[workflows.workflow.metadata]
outputType = "console"

[[ports]]
localPort = 5000
externalPort = 5000

[[ports]]
localPort = 8000
externalPort = 80

[deployment]
deploymentTarget = "cloudrun"
run = "node start.js"
